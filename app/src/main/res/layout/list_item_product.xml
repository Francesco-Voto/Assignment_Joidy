<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable
            name="item"
            type="com.assignment.joidy.data.models.Product"/>
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?colorAccent"
        >
        <ImageView
            android:id="@+id/list_item_product_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_height"
            android:scaleType="centerCrop"
            android:contentDescription="@string/content_descriptor_product"
            bind:imageUrl="@{item.image}"
            />
        <android.support.v4.widget.Space
            android:id="@+id/space_image_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_horizontal_margin"
            android:layout_below="@+id/list_item_product_image"
            />
        <TextView
            android:id="@+id/list_item_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{item.title}"
            android:background="@null"
            android:textColor="#000"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:gravity="start"
            android:layout_below="@+id/space_image_title"
            tools:text="Android"
            />
        <android.support.v4.widget.Space
            android:id="@+id/space_title_sub_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_horizontal_margin"
            android:layout_below="@+id/list_item_product_name"
            android:layout_toLeftOf="@+id/list_item_price_button"
            android:layout_toStartOf="@+id/list_item_price_button"
            />
        <TextView
            android:id="@+id/list_item_product_sub_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{item.subtitle}"
            android:background="@null"
            android:textColor="#000"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:gravity="start"
            android:layout_below="@+id/space_title_sub_title"
            android:layout_toLeftOf="@+id/list_item_price_button"
            android:layout_toStartOf="@+id/list_item_price_button"
            tools:text="Happy Socks"
            />

        <Button
            android:id="@+id/list_item_price_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{item.price + ' '+'€'}"
            android:textColor="#fff"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_price_selector"
            android:layout_below="@+id/space_image_title"
            tools:text="13.50 €"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            />
        <android.support.v4.widget.Space
            android:id="@+id/space_final"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_horizontal_margin"
            android:layout_below="@+id/list_item_product_sub_title"
            />
    </RelativeLayout>
</layout>